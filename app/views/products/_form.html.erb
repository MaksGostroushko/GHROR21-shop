<div class="container">
  <%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field py-2">
      <%= form.label :name, class: "pb-2" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="field py-2">
      <%= form.label :category, class: "pb-2" %>
      <%= form.collection_select :category, Category.order(:id), :id, :name, { prompt: "Select category" }, { class: "form-control" } %>
    </div>
    <div class="field py-2">
      <%= form.label :description, class: "pb-2" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="field py-2">
      <%= form.label :price, class: "pb-2" %>
      <%= form.text_area :price, class: "form-control" %>
    </div>
    <div class="field py-2">
      <%= form.label :image, class: "pb-2" %>
      <%= form.text_area :image, class: "form-control" %>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>

